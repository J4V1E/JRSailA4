@model IEnumerable<JRSail.Models.Member>

@{
    ViewData["Title"] = "Member List";
}

<h2>Member List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> 
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
			<th>
                @Html.DisplayNameFor(model => model.YearJoined)
            </th>
			<th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
			<th>
                @Html.DisplayNameFor(model => model.TaskExempt)
            </th>
			<th>
                @Html.DisplayNameFor(model => model.UseCanadaPost)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="JRMembership" asp-action="Index" asp-route-MemberId="@item.MemberId" asp-route-FullName="@item.FullName">@Html.DisplayFor(modelItem => item.FullName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomePhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
			<td>
                @Html.DisplayFor(modelItem => item.YearJoined)
            </td>
			<td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
			<td>
                @Html.DisplayFor(modelItem => item.TaskExempt)
            </td>
			<td>
                @Html.DisplayFor(modelItem => item.UseCanadaPost)
            </td>
            <td>
                <a asp-action="Index" asp-controller="JRBoat" asp-route-MemberId="@item.MemberId" asp-route-FullName="@item.FullName">Manage Boats</a> |
                <a asp-action="Edit" asp-route-id="@item.MemberId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MemberId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MemberId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
